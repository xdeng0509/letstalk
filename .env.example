# LLM 配置示例
# 选择 LLM 提供方：gemini | openai | huiyuan
LLM_PROVIDER=openai

# OpenAI 配置
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# Google Gemini 配置  
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash

# 腾讯慧言配置
HUIYUAN_API_KEY=your_huiyuan_api_key_here
HUIYUAN_MODEL=hunyuan-lite
HUIYUAN_BASE_URL=https://api.hunyuan.tencentcloudapi.com
HUIYUAN_PATH=/v1/chat/completions

# Flask 应用配置
FLASK_ENV=development
FLASK_DEBUG=True

# 运行模式配置
# 设置为 true 时强制使用 LLM，禁止演示模式
LLM_ONLY=false